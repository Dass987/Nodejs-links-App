<div class="container p-4">
	<div class="row">
		<div class="col-md-6 mx-auto">
			<div class="card">
				<div class="card-body">
					<h3 class="text-center mt-1 mb-4">Save new link</h3>
					<form action="/links/add" method="POST">
						<div class="form-group">
							<label for="title">Title *</label>
							<input type="text" id="title" name="title" class="form-control" required autofocus placeholder="Enter your link name...">
						</div>
						<div class="form-group">
							<label for="url">Url *</label>
							<input type="url" id="url" name="url" class="form-control" required placeholder="Enter link url here...">
						</div>
						<div class="form-group">
							<label for="description">Description</label>
							<textarea class="form-control" id="description" name="description" rows="3" placeholder="Write a description about your link..."></textarea>
						</div>
						<div class="form-group">
							<button class="btn btn-success btn-block" type="submit">Save</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>