<div class="container p-4">
	<div class="row">
		<div class="col-md-6 mx-auto">
			<div class="card">
				<div class="card-header text-center">
					<h3>Sign Up</h3>
				</div>
				<div class="card-body">
					<form action="/signup" method="POST">
						<div class="form-group">
							<label for="fullname">Full name</label>
							<input type="text" name="fullname" placeholder="Full name..." class="form-control" autofocus>
						</div>
						<div class="form-group">
							<label for="username">User</label>
							<input type="username" name="username" placeholder="Username..." class="form-control">
						</div>
						<div class="form-group">
							<label for="password">Password</label>
							<input type="password" name="password" placeholder="Password..." class="form-control">
						</div>
						<div class="form-group">
							<button class="btn btn-outline-primary btn-block" type="submit">Sign Up</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>